<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/03c8d5d9a1.js" crossorigin="anonymous"></script>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="max-w-4xl my-14  mx-auto">
      <div class="text-2xl font-bold">
        Carts
      </div>
      <hr class="my-5">
      <div class="space-y-5">
        <% carts.forEach(cart => { %>
          <div class="flex gap-3 shadow h-32 ">
            <img src="<%= cart.Item.imageUrl %>" alt="">
            <div class="flex-1 w-full">
              <div class="p-2">
                <p class="text-2xl"><%= cart.Item?.name %> </p>
                <p><%= cart.qty + ' X ' + cart.Item?.formatPrice %> </p>
              </div>
              <div class="p-2 text-blue-500">
                <a class="text-red-500" href="/cart/<%= cart.id %>/delete">
                  Delete
                </a>
                |
                <a href="/carts/<%= cart.id %>/checkout">Checkout</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
  </div>
</body>
</html>